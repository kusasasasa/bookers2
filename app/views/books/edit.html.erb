<div class="container"> 
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    		<h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <label for="inputName">Title</label>
            <div><%= f.text_field :title,:size=>"48*7", autofocus: true, id:"inputTitle"%></div>
          </div>
          <div class="form-group">
            <label for="inputName">Body</label>
            <div><%= f.text_area :body,:size=>"48*9", autofocus: true, id:"inputBody" %></div>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
          </div>
        <% end %>
    </div>
  </div>
</div> 



