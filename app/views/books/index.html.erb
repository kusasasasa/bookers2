<main>
    <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <table class="table">
          <tbody>
            <tr>
              <th><%= image_tag current_user.get_profile_image(100,100)%></th>
            </tr>
            <tr>
          	  <th>name</th>
          	  <th><%=  current_user.name%></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%=current_user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
        
          <%= link_to edit_user_path(current_user.id) do%>
            <%= image_tag "sample-author1.jpg" %>
          <%end%>

        </div>
        <%= render 'books/list' %>
      </div>


      <div class="col-lg-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-honver table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
                <td> <%= image_tag book.user.get_profile_image(100,100) %></td>

                <td><%=link_to book.title, book_path(book.id) %></td>
                <td><%= book.body%></td>

          </tr>
          <% end %>
        </tbody>
      </table>
      </div>

    </div>
  </div>
</main>