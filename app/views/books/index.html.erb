<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <table class="table">

          <tbody>
            <tr>
              <th></th>
              <th><%= image_tag @book.get_image %></th>
            </tr>
            <tr>
          	  <th>name</th>
          	  <th><%=  current_user.name%></th>

            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%=current_user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div>
        <%= link_to current_user.name, edit_user_path(current_user) %>

        </div>


        <div class="row">




        </div>
        <h2>New book</h2>
        <%= form_with model: Book.new do |f| %>


          <h4>タイトル</h4>
            <%= f.text_field :title %>

            <h4>本文</h4>
            <%= f.text_area :body %>

            <%= f.submit '投稿' %>
        <% end %>


      <h2>Books</h2>
      <table>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
              <td><%= image_tag book.get_image %></td>

              <td><%= book.title%></td>
              <td><%= book.body%></td>

        </tr>
        <% end %>
      </table>

      </div>
      </div>
    </div>
  </div>
</main>