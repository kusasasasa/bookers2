<h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>

          <div class="form-group">
            <label for="book_title">Title</label>
            <div><%= f.text_field :title,autofocus: true id:"inputTitle"%></div>
          </div>

          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <div><%= f.text_area :body, autofocus: true, id:"inputBody"%></div>
          </div>

          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
        <% end %>