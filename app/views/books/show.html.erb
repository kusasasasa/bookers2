<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">

          <tbody>
            <tr>
          	  <th>name</th>
          	  <th><%=  @book.user.name%></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%=@book.user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <%= link_to @book.user.name, edit_user_path(@book.id) %>


        <div class="row">




        </div>
        <h2>New book</h2>
        <%= form_with model: Book.new do |f| %>


          <h4>タイトル</h4>
            <%= f.text_field :title %>

            <h4>本文</h4>
            <%= f.text_area :body %>

            <%= f.submit '投稿' %>
        <% end %>


      <h2>Book detail</h2>
      <table>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>

        <tr>
              <td><%= image_tag @book.get_image %></td>


              <td><%= @book.title%></td>
              <td><%= @book.body%></td>
              <%= link_to @book.user.name, user_path(@book.user.id) %>


              <% if @book.user == current_user%>
                <td><%= link_to "edit", edit_book_path(@book.id) %></td>
                <td><%= link_to "destroy",book_path(@book.id), method: :delete%></td>
              <%end%>


        </tr>

      </table>

      </div>

    </div>
  </div>
</main>