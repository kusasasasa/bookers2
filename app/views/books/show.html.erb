<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">

          <tbody>
            <tr>
             <th><%= image_tag @book.user.get_profile_image(100,100)%></th>
            </tr>
            <tr>

          	  <th>name</th>
          	  <th><%=  @book.user.name%></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%=@book.user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @book.user_id == current_user.id%>

            <%= link_to current_user.name, edit_user_path(current_user.id) %>
          <%else%>
            <%= link_to user_path(current_user.id) do%>
              <%= image_tag "logo.png" %>
            <%end%>
          <% end %>
        </div>


        <%= render 'books/list' %>
      </div>
      <div class="col-lg-8">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
           

            <tr>
                <a>
                  <td><%= image_tag @book.user.get_profile_image(100,100)%><br>
                  <%= link_to @book.user.name, user_path(@book.user.id) %></td>
                </a>
                  <td><%=link_to @book.title, book_path(@book.id)%></td>
                  <td><%= @book.body%></td>



                  <% if @book.user == current_user%>
                    <td>

                    </td>
                    <td><%= link_to "edit", edit_book_path(@book.id),class:"btn btn-sm btn-success " %></td>
                    <td><%= link_to "destroy",book_path(@book.id), method: :delete,class:"btn btn-sm btn-danger "%></td>
                  <%end%>


            </tr>
          </tbody>
        </table>

      </div>

    </div>
  </div>
</main>