<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <table class="table">
          <tbody>
            <tr>
              <th><%= image_tag @user.get_profile_image(100,100) %></th>
            </tr>
            <tr>
          	  <th>name</th>
          	  <th><%=@user.name%></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%=@user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @user.id == current_user.id%>
            <%= link_to edit_user_path(@user.id) do%>
              <%= image_tag "sample-author1.jpg" %>
            <%end%>

          <%else%>
            <%= link_to user_path(current_user.id) do%>
              <%= image_tag "sample-author1.jpg" %>
            <%end%>

          <% end %>
        </div>
        <%= render 'books/list' %>
      </div>
      <div class="col-lg-8 offset-md-1">



      <h2>Books</h2>
      <table class="table table-honver table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Body</th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %></td>
              <% if @user == current_user%>
                <td><%=link_to book.title, book_path(book.id)%></td>
              <%else%>
                <td><%=link_to book.title,book_path(book.id) %></td>
              <%end%>
              <td><%= book.body%></td>
            </tr>
          </tbody>
          <%end%>



      </table>

      </div>

    </div>
  </div>
</main>