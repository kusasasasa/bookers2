
  <% if flash[:notice] %>
    <div class="flash">
         <%= flash[:notice] %>
    </div>
  <%else%>
    <p id="notice"></p>

  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>

              <tr>
            	  <th>name</th>
            	  <th><%=@user.name%></th>
              </tr>
              <tr>
            	  <th>introduction</th>
            	  <th><%=@user.introduction%></th>
              </tr>
            </tbody>
          </table>

            <% if @user.id == current_user.id%>
              <a class="btn btn-outline-secondary btn-block edit_user_52453" href=<%=edit_user_path(current_user.id)%>>
                  <i class="fas fa-user-cog"></i>
              </a>

            <%else%>
              <a class="btn btn-outline-secondary btn-block edit_user_52453" href=<%=edit_user_path(@user.id)%>>
                <i class="fas fa-user-cog"></i>
              </a>

            <% end %>
            <%= render 'books/list' %>
      </div>


      <div class="col-md-8 offset-md-1">



        <h2>Books</h2>
        <table class="table table-honver table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Body</th>
              </tr>
            </thead>
            <% @books.each do |book| %>
            <tbody>
              <tr>
                <td><%=link_to user_path(book.user.id) do%>
                    <%= image_tag book.user.get_profile_image(100,100) %></td>
                <%end%>
                <% if @user == current_user%>
                  <td><%=link_to book.title, book_path(book.id)%></td>
                <%else%>
                  <td><%=link_to book.title,book_path(book.id) %></td>
                <%end%>
                <td><%= book.body%></td>
              </tr>
            </tbody>
            <%end%>



        </table>
      </div>


  </div>
</div>
