<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

        <table class="table">

          <tbody>
            <tr>
          	  <th>name</th>
          	  <th><%=@user.name%></th>
            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%=@user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <% if @user == current_user%>


          <%= link_to @user.name, edit_user_path(@user.id) %>
        <%else%>
          <%= link_to @user.name, user_path(current_user.id) %>
        <% end %>


        <div class="row">




        </div>
        <h2>New book</h2>
        <%= form_with model: Book.new do |f| %>


          <h4>タイトル</h4>
            <%= f.text_field :title %>

            <h4>本文</h4>
            <%= f.text_area :body %>

            <%= f.submit '投稿' %>
        <% end %>


      <h2>Books</h2>
      <table>
        <% @books.each do |book| %>
          <tr>
            <th>Title</th>
            <% if @user == current_user%>
              <th><%=link_to book.title, book_path(book.id)%></th>
            <%else%>
              <th><%=link_to book.title,book_path(book.id) %></th>
            <%end%>
          <tr>  
            <th>Body</th>
            <th><%= book.body%></th>
          </tr>
        <%end%>
  
        
  
      </table>

      </div>

    </div>
  </div>
</main>