<main>
    <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <h2>User info</h2>

        <table class="table">

          <tbody>
            <tr>
               <th><%= image_tag current_user.get_profile_image(100,100) %></th>
            </tr>
            </tr>
            <tr>
          	  <th>name</th>
          	  <th><%=current_user.name%></th>

            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%=current_user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div class="row">

          <% if @user == current_user.id%>

            <%= link_to edit_user_path(current_user.id) do%>
              <%= image_tag "sample-author1.jpg" %>
            <%end%>

          <%else%>
            <%= link_to user_path(current_user.id) do%>
              <%= image_tag "no_image.jpg" %>
            <%end%>

          <% end %>
        </div>

        <%= render 'books/list' %>
      </div>







    <div class="col-lg-8 offset-md-1">
        <h2>Users</h2>

        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th><%= image_tag user.get_profile_image(100,100) %></th>
                <th><%= user.name%></th>
                <th><%= link_to "show", user_path(user.id) %></th>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>


  </div>
</main>