<main>
    <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        
        <h2>User info</h2>

        <table class="table">

          <tbody>
            <tr>
          	  <th>name</th>
          	  <th><%=current_user.name%></th>

            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%=current_user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
      
          <% if @user == current_user%>
  
  
            <%= link_to current_user.name, edit_user_path(current_user.id) %>
          <%else%>
            <%= link_to @user.name, user_path(current_user.id) %>
          <% end %>
        </div>

        <%= render 'books/list' %>
      </div>
  
    





    <div class="col-lg-8 offset-md-1">
        <h2>Users</h2>
        
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th><%= image_tag user.get_profile_image(100,100) %></th>
                <th><%= user.name%></th>
                <th><%= link_to "show", user_path(user.id) %></th>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>

    
  </div>
</main>