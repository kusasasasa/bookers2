
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table">

          <tbody>


            <tr>
          	  <th>name</th>
          	  <th><%=current_user.name%></th>

            </tr>
            <tr>
          	  <th>introduction</th>
          	  <th><%=current_user.introduction%></th>
            </tr>
          </tbody>
        </table>
        <div class="row">

          <% if @user == current_user.id%>

            <a class="btn btn-outline-secondary btn-block edit_user_52453" href=<%=edit_user_path(current_user.id)%>>
                <i class="fas fa-user-cog"></i>
            </a>


          <%else%>
            <a class="btn btn-outline-secondary btn-block edit_user_52453" href=<%=user_path(current_user.id)%>>
                <i class="fas fa-user-cog"></i>
            </a>

          <% end %>
          <%= render 'books/list' %>
        </div>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>

        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th><%= image_tag user.get_profile_image(100,100) %></th>
                <th><%= user.name%></th>
                <th><%= link_to "Show", user_path(user.id) %></th>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>

    </div>
  </div>