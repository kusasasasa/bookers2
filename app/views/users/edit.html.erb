<div class="container"> 
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <div><%= f.text_field :name,:size=>"48*7", autofocus: true, id:"inputName"%></div>
        </div>
        <div class="form-group">  
          <label for="inputImage">ProfileImage</label>
          <div><%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %></div>
        </div>
        <div class="form-group">  
          <label for="inputName">introduction</label>
          <div><%= f.text_area :introduction,:size=>"48*7", autofocus: true, id:"inputIntroduction"%></div>
        </div>
        <div class="form-group"> 
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
        </div>
      <% end %>
    </div>
  </div>
</div>


